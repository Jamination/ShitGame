<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <TargetFramework>netcoreapp3.1</TargetFramework>
    <AssemblyName>ShitGame</AssemblyName>
    <MonoGamePlatform>DesktopGl</MonoGamePlatform>
    <PublishTrimmed>true</PublishTrimmed>
    <PublishReadyToRun>false</PublishReadyToRun>
    <TieredCompilation>false</TieredCompilation>
    <RuntimeIdentifiers>win10-x64;linux-x64;osx-x64</RuntimeIdentifiers>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="MonoGame.Content.Builder.Task" Version="3.8.0.1375-develop" />
    <PackageReference Include="MonoGame.Framework.DesktopGL" Version="3.8.0.1375-develop" />
    <PackageReference Include="Apos.Input" Version="1.0.0" />
  </ItemGroup>

  <ItemGroup>
    <Compile Include="..\..\Game\**\*.cs">
      <Link>%(RecursiveDir)%(Filename)%(Extension)</Link>
    </Compile>
    <Compile Update="..\..\Game\GameRoot.cs">
      <Link>src\GameRoot.cs</Link>
    </Compile>
    <Compile Update="..\..\Game\Components\Physics.cs">
      <Link>Components\Physics.cs</Link>
    </Compile>
    <Compile Update="..\..\Game\GameRoot.cs">
      <Link>GameRoot.cs</Link>
    </Compile>
    <Compile Update="..\..\Game\GUI\UI_Base.cs">
      <Link>GUI\UI_Base.cs</Link>
    </Compile>
    <Compile Update="..\..\Game\GUI\ExitAction.cs">
      <Link>GUI\ExitAction.cs</Link>
    </Compile>
    <Compile Update="..\..\Game\GUI\DisplayState.cs">
      <Link>GUI\DisplayState.cs</Link>
    </Compile>
    <Compile Update="..\..\Game\GUI\Button.cs">
      <Link>GUI\Button.cs</Link>
    </Compile>
    <Compile Update="..\..\Game\Components\Text.cs">
      <Link>Components\Text.cs</Link>
    </Compile>
    <Compile Update="..\..\Game\Scenes\GameScreen.cs">
      <Link>Scenes\GameScreen.cs</Link>
    </Compile>
    <Compile Update="..\..\Game\Scenes\GameScreen.cs">
      <Link>Screens\GameScreen.cs</Link>
    </Compile>
  </ItemGroup>

  <ItemGroup>
    <MonoGameContentReference Include="..\..\Game\Content\**\*.mgcb">
      <Link>Content\%(RecursiveDir)%(Filename)%(Extension)</Link>
    </MonoGameContentReference>
  </ItemGroup>

</Project>

<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <TargetFramework>netcoreapp3.1</TargetFramework>
    <AssemblyName>ShitGame</AssemblyName>
    <MonoGamePlatform>DesktopGl</MonoGamePlatform>
    <PublishTrimmed>true</PublishTrimmed>
    <PublishReadyToRun>false</PublishReadyToRun>
    <TieredCompilation>false</TieredCompilation>
    <RuntimeIdentifiers>win10-x64;linux-x64;osx-x64</RuntimeIdentifiers>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Aether.Physics2D.MG" Version="1.5.0" />
    <PackageReference Include="MonoGame.Content.Builder.Task" Version="3.8.0.1375-develop" />
    <PackageReference Include="MonoGame.Framework.DesktopGL" Version="3.8.0.1375-develop" />
    <PackageReference Include="Apos.Input" Version="1.0.0" />
  </ItemGroup>

  <ItemGroup>
    <Compile Include="..\..\Game\**\*.cs">
      <Link>%(RecursiveDir)%(Filename)%(Extension)</Link>
    </Compile>
    <Compile Update="..\..\Game\GUI\UI_ButtonState.cs">
      <Link>GUI\UI_ButtonState.cs</Link>
    </Compile>
    <Compile Update="..\..\Game\GUI\UI_Window.cs">
      <Link>GUI\UI_Window.cs</Link>
    </Compile>
    <Compile Remove="..\..\Game\UI\**" />
    <Compile Update="..\..\Game\Components\GameObject.cs">
      <Link>Components\GameObject.cs</Link>
    </Compile>
    <Compile Update="..\..\Game\Components\Body.cs">
      <Link>Components\Body.cs</Link>
    </Compile>
    <Compile Update="..\..\Game\Scenes\EditorScreen.cs">
      <Link>Screens\EditorScreen.cs</Link>
    </Compile>
  </ItemGroup>

  <ItemGroup>
    <MonoGameContentReference Include="..\..\Game\Content\**\*.mgcb">
      <Link>Content\%(RecursiveDir)%(Filename)%(Extension)</Link>
    </MonoGameContentReference>
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\..\penumbra\Source\MonoGame.Penumbra.DesktopGL.csproj" />
  </ItemGroup>

</Project>
